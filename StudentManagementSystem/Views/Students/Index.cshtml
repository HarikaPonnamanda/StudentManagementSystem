@model IEnumerable<StudentManagementSystem.Models.Student>
@{
    ViewData["Title"] = "Students";
}

<h2>Students</h2>
<a class="btn btn-primary mb-3" href="@Url.Action("Create")">Add Student</a>
<form asp-action="Index" method="get">
    <p>
        <input type="text" name="searchString" class="form-control" placeholder="Search by Name, Grade or Email" style="max-width:300px; display:inline-block;" />
        <button type="submit" class="btn btn-primary">Search</button>
    </p>
</form>


<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Grade</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Name</td>
                <td>@student.Grade</td>
                <td>@student.Email</td>
                <td>@student.Phone</td>
                <td>
                    <a class="btn btn-info btn-sm" href="@Url.Action("Details", new { id = student.Id })">Details</a>
                    <a class="btn btn-warning btn-sm" href="@Url.Action("Edit", new { id = student.Id })">Edit</a>
                    <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", new { id = student.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


